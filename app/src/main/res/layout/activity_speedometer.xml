<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvSpeedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸï¸ Live Speedometer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true" />

    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/speedometerView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:sv_unit="km/h"
        app:sv_withTremble="true"
        app:sv_speedTextColor="#FFA500"
        app:sv_markColor="#FFFFFF"
        app:sv_centerCircleColor="#222222" />

    <Button
        android:id="@+id/btnBackToDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”™ Back"
        android:textColor="#FFFFFF"
        android:background="@drawable/glow_button2"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/speedometerView"
        android:layout_marginTop="32dp"/>
</RelativeLayout>
